<?xml version="1.0"?>
<ruleset name="WordPress Coding Standards for Features Plugin">

	<description>A custom set of code standard rules to check for GoDAM plugin.</description>

	<!-- What to scan: include any root-level PHP files, and the /inc folder -->
	<file>./admin/</file>
	<file>./assets/src/blocks/</file>
	<file>./inc/</file>
	<file>./godam.php</file>

	<!-- These are excluded from the above paths.-->
	<exclude-pattern>**/build/**</exclude-pattern>
	<exclude-pattern>**/node_modules/**</exclude-pattern>
	<exclude-pattern>**/tests/**</exclude-pattern>
	<exclude-pattern>**/vendor-prefixed/**</exclude-pattern>
	<exclude-pattern>**/vendor/**</exclude-pattern>

	<!-- How to scan: include CLI args so you don't need to pass them manually -->
	<!-- Usage instructions: https://github.com/PHPCSStandards/PHP_CodeSniffer/wiki/Usage -->
	<!-- Annotated ruleset:
	https://github.com/PHPCSStandards/PHP_CodeSniffer/wiki/Annotated-ruleset.xml -->
	<!-- Show sniff and progress -->
	<arg value="sp" />
	<!-- Strip the file paths down to the relevant bit -->
	<arg name="basepath" value="./" />
	<!-- Enable colors in report -->
	<arg name="colors" />
	<!-- Only lint php files by default -->
	<arg name="extensions" value="php" />
	<!-- Whenever possible, cache the scan results and re-use those for unchanged files on the next
	scan. -->
	<arg name="cache" value="phpcs-cache.json" />
	<!-- Enables parallel processing when available for faster results. -->
	<arg name="parallel" value="20" />
	<!-- Set severity to 1 to see everything that isn't effectively turned off. -->
	<arg name="severity" value="1" />

	<!-- Ruleset Config: set these to match your project constraints. -->

	<!--
		Tests for PHP version compatibility.
	https://github.com/WordPress-Coding-Standards/WordPress-Coding-Standards#Recomended-additional-rulesets
	-->
	<config name="testVersion" value="7.4-" />

	<!--
		Tests for WordPress version compatibility.
	https://github.com/WordPress-Coding-Standards/WordPress-Coding-Standards/wiki/Customizable-sniff-properties
	-->
	<config name="minimum_wp_version" value="6.5" />

	<!-- Rules: rtCamp Coding Standards -->
	<!-- https://github.com/rtCamp/coding-standards-d/rtCamp/ruleset.xml -->
	<rule ref="rtCamp">
		<exclude name="SlevomatCodingStandard.ControlStructures.EarlyExit" />
		<exclude name="WordPress.WhiteSpace.ControlStructureSpacing" />
		<exclude name="Squiz.WhiteSpace.FunctionSpacing" />
		<exclude name="SlevomatCodingStandard.TypeHints.LongTypeHints" />
	</rule>

	<!-- Restore these rules since we're using WPCS structure-->
	<rule ref="WordPress.Files" />

	<!-- Individual rule configuration -->
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="godam" />
			</property>
		</properties>
	</rule>
	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
		<exclude-pattern>/inc/templates/</exclude-pattern>
		<properties>
			<property name="prefixes" type="array">
				<!-- Values: replace the function, class, and variable prefixes used. -->
				<element value="RTGODAM\" />
				<element value="rtgodam_" />
				<element value="RTGODAM_" />
			</property>
		</properties>
	</rule>

	<!-- Restore these rules-->
	<rule ref="WordPress.Files.FileName.InvalidClassFileName" />


</ruleset>
